    <servlet-mapping>
        <servlet-name>ViewIssueBookServlet</servlet-name>
        <url-pattern>/issuedbook</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.html</welcome-file> <!-- added -->
    </welcome-file-list>
</web-app>
