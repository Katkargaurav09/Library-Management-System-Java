        <url-pattern>/issuebook</url-pattern>
    </servlet-mapping>

    <!-- Return Book Servlet Configuration -->
    <servlet>
        <servlet-name>ReturnBookServlet</servlet-name>
        <servlet-class>ReturnBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReturnBookServlet</servlet-name>
        <url-pattern>/returnbook</url-pattern>
    </servlet-mapping>

    <!-- Fine Section Servlet Configuration -->
    <servlet>
        <servlet-name>FineSectionServlet</servlet-name>
