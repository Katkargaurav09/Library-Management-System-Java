    </servlet>

    <servlet-mapping>
        <servlet-name>AvailableBookServlet</servlet-name>
        <url-pattern>/availablebook</url-pattern>
    </servlet-mapping>

    <!-- Display Book Servlet Configuration -->
    <servlet>
        <servlet-name>DisplayBookServlet</servlet-name>
